<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body card-shadow">
      <h1 class="text-center mb-3">
        <i class="fas fa-user-plus"></i> Sign-Up
      </h1>
      <%- include ("./partials/messages"); %>
        <form action="/signup" method="POST">
          <div class="form-group">
            <input type="name" id="name" name="name" class="form-control my-2" placeholder="Enter Name"
              value="<%= typeof name != 'undefined' ? name : '' %>" />
          </div>
          <div class="form-group">
            <input type="email" id="email" name="email" class="form-control my-2" placeholder="Enter Email"
              value="<%= typeof email != 'undefined' ? email : '' %>" />
          </div>
          <div class="form-group">
            <input type="password" id="password" name="password" class="form-control my-2" placeholder="Create Password"
              value="<%= typeof password != 'undefined' ? password : '' %>" />
            <input type="password" id="password2" name="password2" class="form-control my-2"
              placeholder="Confirm Password" value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
            <select class="form-control" id="role_id" name="role_id">
              <option value="0"> -- Security Level -- </option>
              <option value="1">Administrator</option>
              <option value="2">Supervisor</option>
              <option value="3">Customer</option>
            </select>
          </div>
          <div class="form-group text-center mt-3">
            <button type="submit" class="btn btn-primary btn-block">
              Sign-Up
            </button>
          </div>
        </form>
        <p class="lead mt-4">Have An Account? <a href="/signin">Sign-In</a></p>
    </div>
  </div>
</div>
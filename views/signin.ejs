<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body card-shadow">
      <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i> Sign-In</h1>
      <%- include ("./partials/messages"); %>
        <form action="/signin" method="POST">
          <div class="form-group">
            <input type="email" id="email" name="email" class="form-control my-2" placeholder="Enter Email" />
          </div>
          <div class="form-group">
            <input type="password" id="password" name="password" class="form-control my-2"
              placeholder="Enter Password" />
          </div>
          <div class="form-group text-center mt-3">
            <button type="submit" class="btn btn-primary btn-block">Login</button>
          </div>
        </form>
        <p class="lead mt-4">
          No Account? <a href="/signup">Sign-Up</a>
        </p>
    </div>
  </div>
</div>